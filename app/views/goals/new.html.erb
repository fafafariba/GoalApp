<h1>New Goal</h1>

<form action="<%= goals_url %>" method="POST">
  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token %>">

  <label>Name:
    <input type="text" name="goal[name]">
  </label>
  <br><br>
  <label>Description:
    <textarea name="goal[description]"></textarea>
  </label>

  <p>
    <input type="radio" name="goal[visibility]" <%= "checked" if @goal.visibility == "public" %> value="Public">
    <label>Public</label>
    <input type="radio" name="goal[visibility]" <%= "checked" if @goal.visibility == "private" %> value="Private">
    <label>Private</label>
  </p>

  <label>Status: </label>
  <p>
    <input type="radio" name="goal[status]" <%= "checked" if @goal.status == "Ongoing" %> value="Ongoing">
    <label>Ongoing</label>
    <input type="radio" name="goal[status]" <%= "checked" if @goal.status == "Complete" %> value="Complete">
    <label>Complete</label>
  </p>


  <input type="submit" value="Add Goal">

</form>
