<h1><%= @goal.name %></h1>

<% if current_user == @user  %>
  <%= button_to "Edit Goal", edit_goal(@goal), method: :get %>
  <%= button_to "Delete Goal", goal_url(@goal), method: :get %>
<% end %>

<ul>
  <% if current_user == @goal.user %>
    <p><%= @goal.description %></p>
    <p>Status: <%= @goal.status %></p>
  <% else %>
    <% if @goal.visibility = "public" %>
      <p><%= @goal.description %><p>
      <p>Status: <%= @goal.status %></p>
      <p>User: <%=link_to @goal.user.username, user_url(@goal.user)%></p>
    <% end %>
  <% end %>
</ul>

<br><br>

<%= button_to "<< ALL THE GOALS", goals_url, method: :get %>
